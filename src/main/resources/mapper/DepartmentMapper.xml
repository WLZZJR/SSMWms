<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wlz.dao.DepartmentDao">
    <insert id="save" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into department(sn,name) values(#{sn},#{name})
    </insert>
    <update id="update">
        update department set sn=#{sn},name=#{name} where id= #{id}
    </update>
    <delete id="delete">
        delete from department where id = #{id}
    </delete>
    <select id="get" resultType="com.wlz.entity.Department">
        select * from department where id = #{id}
    </select>
    <select id="listAll" resultType="com.wlz.entity.Department">
        select * from department
    </select>
</mapper>